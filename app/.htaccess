#3 - Bloquear acesso ao wp-admim
# OBS: Não esqueça de alterar a opção "seudominio.com.br" para o nome do seu domínio
RewriteEngine ligado
Reescrever Cond %{REQUEST_METHOD} POST
RewriteCond %{HTTP_REFERER} !^http://(.*)?planoh.com.br/ [NC]
RewriteCond %{REQUEST_URI} ^(.*)?wp-login\.php(.*)$ [OR]
RewriteCond %{REQUEST_URI} ^(.*)?wp-admin$
Regra de regravação ^(.*)$ - [F]
#3 - FIM

# 4 - Bloquear o arquivo wp-config.php
<arquivos wp-config.php>
ordem permitir, negar
negar de todos
</files>
# 4 - FIM

# 5 - Imperdir ataques de "Script Injection"
Opções +FollowSymLinks
Rewrite Engine On
RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|[|%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|[|%[0-9A-Z]{0,2})
RewriteRule ^(.*)$ index.php [F,L]
